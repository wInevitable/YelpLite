<% if @results %>
  <div class="header">
    <h2><strong><%= params[:query][:find] %></strong> <%= params[:query][:near] %></h2>
  </div>
  
  <div class="search-results">
    <% @results.each do |result| %>
      <%= render result %>
      <br>
    <% end %>
  </div>

  <%= paginate @results %>
<% end %>